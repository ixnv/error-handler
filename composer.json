{
    "name": "elama/error-handler",
    "description": "eLama ErrorHandling library",
    "license": "proprietary",
    "type": "library",

    "require": {
        "php": ">=5.5",
        "swiftmailer/swiftmailer": "v5.0.1",
        "monolog/monolog": "~1.12",
        "graylog2/gelf-php": "~1.3",
        "php-amqplib/php-amqplib": "2.5.*"
    },

    "require-dev": {
        "symfony/symfony": "~2.6",
        "phing\/phing": "2.15.*",
        "hamcrest/hamcrest-php": "~1.2.1",
        "phpunit/phpunit": "~4.6.4"
    },

    "autoload": {
        "psr-4": {
            "eLama\\ErrorHandler\\": [ "src" ],
            "eLama\\ErrorHandler\\Bundle\\": ["elama-error-handler-bundle/src"]
        }
    },

    "autoload-dev": {
        "psr-4": {
            "eLama\\ErrorHandler\\Test\\": [ "tests" ]
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },

    "config": {
        "bin-dir": "bin"
    }
}
